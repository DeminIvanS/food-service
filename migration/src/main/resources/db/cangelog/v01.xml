<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <!-- локальный ченджлог  -->
    <changeSet id="2023-10-22 14:59:00" author="Ivan">

        <!-- relativeToChangelogFile - позволяет указывать путь относительно той папки, где лежит ченджлог  -->
        <sqlFile path="v01/init.sql" relativeToChangelogFile="true"/>
        <rollback>
            <sqlFile path="v01/rollback/init_rollback.sql" relativeToChangelogFile="true"/>
        </rollback>

    </changeSet>
    <changeSet id="2023-10-22 15:38:00" author="Ivan">

        <createTable tableName="couriers">
            <column name="courier_id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_couriers"/>
            </column>
            <column name="courier_phone" type="varchar(50)"/>
            <column name="courier_status" type="varchar(50)"/>
            <column name="courier_coordinates" type="varchar(50)"/>
        </createTable>

        <createTable tableName="customers">
            <column name="customer_id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_customers"/>
            </column>
            <column name="phone" type="varchar(50)">
            </column>
            <column name="email" type="varchar(50)">
            </column>
            <column name="address" type="varchar(50)">
            </column>
        </createTable>

        <createTable tableName="orders">
            <column name="order_id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_orders"/>
            </column>
            <column name="customer_id" type="BIGINT">

            </column>
            <column name="restaurant_id" type="BIGINT"/>
            <column name="status" type="varchar(50)"/>
            <column name="courier_id" type="BIGINT"/>

            <column name="timestamp" type="timestamp"/>

        </createTable>

        <createTable tableName="restaurants">
            <column name="restaurant_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_restaurants"/>
            </column>
            <column name="address" type="varchar(50)"/>
            <column name="status" type="varchar(50)"/>
        </createTable>

        <createTable tableName="restaurant_menu_items">
            <column name="restaurant_menu_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_restaurantmenuitems"/>
            </column>
            <column name="restaurant_id" type="BIGINT"/>
            <column name="name" type="varchar(50)"/>
            <column name="price" type="double"/>
            <column name="image" type="varchar(50)"/>
            <column name="description" type="varchar(50)"/>
        </createTable>

        <createTable tableName="order_items">
            <column name="order_item_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_orderitems"/>
            </column>
            <column name="order_id" type="BIGINT"/>
            <column name="restaurant_menu_item" type="BIGINT"/>
            <column name="price" type="double"/>
            <column name="quantity" type="double"/>
        </createTable>

        <createSequence incrementBy="1" sequenceName="hibernate_sequence" startValue="1"/>
        <createSequence incrementBy="1" sequenceName="hibernate_sequence" startValue="1"/>
        <createSequence incrementBy="1" sequenceName="hibernate_sequence" startValue="1"/>
        <createSequence incrementBy="1" sequenceName="hibernate_sequence" startValue="1"/>
        <createSequence incrementBy="1" sequenceName="hibernate_sequence" startValue="1"/>
        <createSequence incrementBy="1" sequenceName="hibernate_sequence" startValue="1"/>


    </changeSet>



</databaseChangeLog>